{
    "name": "TaskBoard",
    "id": "taskboard",
    "packaging_format": 1,
    "description": {
        "en": "Kanban-inspired app for keeping track of things that need to get done.",
        "fr": "Application inspirée de Kanban pour garder une trace des choses à faire."
    },
    "version": "1.0.2~ynh2",
    "url": "http://taskboard.matthewross.me/",
    "license": "MIT",
    "maintainer": {
        "name": "eric_G",
        "email": ""
    },
    "requirements": {
        "yunohost": ">= 4.1.7"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.0-fpm"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/taskboard",
                "default": "/taskboard"
            },        
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            }
        ]
    }
}
